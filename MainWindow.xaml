<Window x:Class="UserIn3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserIn3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBar Height="26" Name="toolBar1" Width="200" DockPanel.Dock="Top" >
            <Button Name="Button1" Margin="0,0,0,-0.2" VerticalAlignment="Bottom">Bold</Button>
            <Button Name="Button2" Margin="0,0,0,-0.2" VerticalAlignment="Stretch">Italic</Button>
            <Slider Name="Slider1" Minimum="2" Maximum="72" Width="100"></Slider>
        </ToolBar>
        <Grid Name="grid1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <RichTextBox Grid.Column="2" Name="richTextBox1" />
            <ListBox Grid.Column="0" Name="listBox1" SelectionChanged="listBox1_SelectionChanged"></ListBox>
            <GridSplitter Name="gridSplitter1" Margin="0" Width="5" Grid.Column="1"
HorizontalAlignment="Left" />
        </Grid>
    </DockPanel>
</Window>
